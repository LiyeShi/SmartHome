<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#42c9e1">
        <Button
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:id="@+id/set_back"
            android:background="@drawable/fanhui"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="25dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/set_din"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="IP地址"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_margin="1dp">
            <TextView
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="设备IP地址："
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="N/A"
                android:id="@+id/ShebeiIp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_margin="1dp">
            <TextView
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="服务器IP地址："
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="N/A"
                android:id="@+id/FuwuqiIp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/set_din"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="事件提醒"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_margin="1dp">
            <TextView
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="铃声设置："
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="N/A"
                android:id="@+id/Naoling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/set_din"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="紧急通信"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_margin="1dp">
            <TextView
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="联系人手机号："
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="N/A"
                android:id="@+id/Lianxiren" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_margin="1dp">
            <TextView
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="社区手机号："
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="N/A"
                android:id="@+id/shequ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/button"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:text="修改"
                android:textSize="20dp"
                android:layout_margin="30dp"
                />
            <Button
                android:id="@+id/no"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:text="取消"
                android:textSize="20dp"
                android:layout_margin="30dp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>
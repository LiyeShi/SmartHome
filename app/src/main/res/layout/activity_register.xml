<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/activity_register_title"
        android:gravity="center"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/signup_email_im"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@drawable/signin_email_im" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/activity_register_et_name"
                android:background="@drawable/signin_email_et"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:hint="E-mail"
                android:padding="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/signup_psd1_im"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/signin_psd_again_im" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/activity_register_et_pswd1"
            android:inputType="textPassword"
            android:background="@drawable/signin_psd_again_et"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:hint="Password"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/signup_psd2_im"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/signin_psd_im" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/activity_register_et_pswd2"
            android:inputType="textPassword"
            android:background="@drawable/signin_psd_et"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:hint="Password Again"
            android:padding="5dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/signup_btn"
        android:id="@+id/activity_register_btn_register" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/signin_bg">

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="登 录"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/activity_login_tv_title"
            android:textSize="40dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/signin_email_im"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@drawable/signin_email_im" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/activity_login_et_name"
                android:background="@drawable/signin_email_et"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:hint="E-mail"
                android:padding="5dp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/signin_psd_im"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@drawable/signin_psd_im" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/activity_login_et_pswd"
                android:inputType="textPassword"
                android:background="@drawable/signin_psd_et"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:hint="Password"
                android:padding="5dp" />
        </LinearLayout>


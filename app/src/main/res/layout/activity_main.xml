<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:hyman="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.sict.soft.smarthome.MainActivity">

<com.sict.soft.smarthome.SlidingMenu
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42c9e1"
    hyman:rightPadding="0dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/left_menu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:orientation="vertical">

                    <Button
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:id="@+id/title_search"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="350dp"
                        android:background="@drawable/search"/>

                </LinearLayout>

                <com.sict.soft.smarthome.view.ImageBarnnerFramLayout
                    android:id="@+id/image_group"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="0dp">
                </com.sict.soft.smarthome.view.ImageBarnnerFramLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/hj"
                            android:id="@+id/at_main_bt1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="环境"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/kz"
                            android:id="@+id/at_main_bt2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="控制"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/cz"
                            android:id="@+id/at_main_bt3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="操作"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/jc"
                            android:id="@+id/at_main_bt4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:layout_gravity="center">
                         <Button
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:background="@drawable/lr"
                             android:id="@+id/at_main_bt5"/>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="老人"
                             android:layout_gravity="center"/>
                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/sj"
                            android:id="@+id/at_main_bt6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp">
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/dw"
                                android:id="@+id/at_main_bt7"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="定位"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/sos"
                                android:id="@+id/at_main_bt8"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SOS"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp">
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/sz"
                                android:id="@+id/at_main_bt9"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设置"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</com.sict.soft.smarthome.SlidingMenu>
</RelativeLayout>
